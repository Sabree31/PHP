<?php
echo "<table border =\"2\" style='border-collapse: collapse'>";
	for ($r=0; $r<7;$r++) 
	{ 
		echo "<tr> \n";
		for ($c=0; $c<7; $c++) 
		{ 
		   $ans = $c*$r;
		   echo "<td style='width: 80'>$ans</td> \n";
		}
	  	echo "</tr>";
	}
	echo "</table>";
?>

